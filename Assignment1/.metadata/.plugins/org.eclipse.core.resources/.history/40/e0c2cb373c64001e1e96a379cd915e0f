import java.util.*;
public class q2_ans {

	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		
		double num1;
		double num2;
		
		System.out.println("Enter two numbers");
		
		if(sc.hasNextDouble() && !sc.hasNextInt())
		{
			num1 = sc.nextDouble();
		
			if(sc.hasNextDouble()&& !sc.hasNextInt())
		
			{
				num2 = sc.nextDouble();
				
				double average;
				average = num1+num2;
				
				System.out.println("Average of two double numbers is "+average);
			}
		}
		else
		{
			System.out.println("not a double");
		}
		
		
		
	}
	

}
